    <script>
    function toggleTipeDokumen(enable) {
        const kontrol1Input = document.getElementById("kontrol1");
        const kontrol2Input = document.getElementById("kontrol2");
        const kontrol3Input = document.getElementById("kontrol3");
        const kontrol4Input = document.getElementById("kontrol4");
        const kontrol5Input = document.getElementById("kontrol5");
        const kontrol6Input = document.getElementById("kontrol6");
        const kontrol7Input = document.getElementById("kontrol7");
        const kontrol8Input = document.getElementById("kontrol8");
        const kontrol9Input = document.getElementById("kontrol9");

        kontrol1Input.disabled = !enable;
        kontrol2Input.disabled = !enable;
        kontrol3Input.disabled = !enable;
        kontrol4Input.disabled = !enable;
        kontrol5Input.disabled = enable;
        kontrol6Input.disabled = enable;
        kontrol7Input.disabled = enable;
        kontrol8Input.disabled = enable;
        kontrol9Input.disabled = enable;
    }


    function handleTipeDokumen() {
        const typeDocument = document.querySelector('input[name="tipe_dokumen"]:checked').value;

        if (typeDocument === "udd") {
            toggleTipeDokumen(true);
        } else {
            toggleTipeDokumen(false);
        }
    }
    </script>

